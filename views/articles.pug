extends layout

include mixins/_reviewArticleCard

block content
    .reviewers
        .links
            a.link(href='/toreview') To Review
            a.link(href='/minetoreview') My Assignments
            a.link(href='/reviewed') Published
        each article in articles
            +reviewArticleCard(article)
        if articles.length==0
            div.card-body
                h5.card-title No articles here!