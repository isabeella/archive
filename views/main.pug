extends layout

include mixins/_articleCard

block content
  -var words = ['Sciences', 'Mathematics', 'Social Sciences','Other', 'English', 'Engineering', 'Computer Science', 'Arts'];
  .filter
    form(action="/search", method="POST")
      h5.card-title Search
      input.searchButton.searchTextInput(type="text" name="query" placeholder="Search...")
      button.btn.btn-primary.searchButton(type="submit") Search
    br
    h5.card-title Filter
    each word in words
      if title && title==word
        a.button.btn.filterButtons.pinkButton(href=`/${title}`)=title
      else
        a.button.btn.filterButtons(href=`/${word}`)=word
      //input(type='checkbox' name='Sciences' value='Sciences')
      //label(for='Sciences') Sciences
      //br
      //input(type='checkbox' name='Mathematics' value='Mathematics')
      //label(for='Mathematics') Mathematics
      //br
      //input(type='checkbox' name='Social Sciences' value='Mathematics')
      //label(for='Mathematics') Mathematics
      //-var words = ['Sciences', 'Mathematics', 'Social Sciences', 'English', 'Computer Science', 'Engineering', 'Arts', 'Other'];
          .filter
            h5.card-title Filter
            input(type="text" name="query" placeholder="Search")
            br
            br
            each word in words
              input(type='checkbox' name=word value=word)
              label.checklabel(for=word)=word
              br
              
              option(value = article.reviewStat selected)= article.reviewStat
              each review in reviews
                  if review!=article.reviewStat
                      option(value=review)=review
  .inner
    each article in articles
        +articleCard(article)
    if articles.length==0
        div.card-body
            h5.card-title No articles have been uploaded for this subject
  .about
    h5.card-title About
    p Welcome to The Westridge Archives, where knowledge meets collaboration! Our platform is a dynamic hub tailored for high school students eager to showcase their research prowess and engage in scholarly discourse. Here, budding academics can seamlessly share their findings, cite each other's work, and foster a community of intellectual exchange. Whether you're delving into the realms of science, literature, history, or beyond, join us in celebrating the power of curiosity and the joy of learning. Together, let's amplify the voices of the next generation of scholars!