      else if article.reviewStat=="Reviewed"
          if user.status == 4
            a.btn.btn-primary(href=`/review/${article.id}`) Review
            .CRUD
              a(href=`/delete/${article.id}`) remove
          else 
            a.btn.btn-primary(href=`/article/${article._id}`) Read More